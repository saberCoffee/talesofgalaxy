{% extends 'base.html.twig' %}

{% block body %}
<main>

    <div class="container">

        {# S'il y a une erreur, on l'affiche dans un joli cadre #}
        {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}

        {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
        <form action="{{ path('login_check') }}" class="form-login" method="post">
            <div class="form-group">
                <input type="text" id="username" name="_username" value="{{ last_username }}"  class="form-control"placeholder="Nom d'utilisateur" />
            </div>

            <div class="form-group">
                <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" />
            </div>

            <div class="form-group">
                <input type="submit" value="Connexion" class="btn btn-default" />
            </div>
        </form>

    </div><!-- /.div container -->

</main>

{% endblock %}
